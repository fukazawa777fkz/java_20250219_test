<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.studyapp.dao.RegisterDao">

    <resultMap id="UserInfo" type="com.example.studyapp.entity.UserEntity">
        <result property = "userId" column = "user_id"/>
        <result property = "userName" column = "user_name"/>
        <result property = "userPassword" column = "user_password"/>   
    </resultMap>

    <select id="existByUserName" resultType="int">
        SELECT COUNT(*)
        FROM user_info
        WHERE user_name = #{userName}
    </select>

    <insert id="insertUserInfo">
        INSERT INTO user_info (user_name, user_password)
        VALUES (#{userName}, #{userPassword})
    </insert>

    <select id="findByUserName" resultMap="UserInfo">
        SELECT *
        FROM user_info
        WHERE user_name = #{userName}
    </select>

</mapper>